{
  "branches": [
    "main",
    {
      "name": "beta",
      "prerelease": true
    },
    {
      "name": "alpha",
      "prerelease": true
    }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog\n\nAll notable changes to this project will be documented in this file.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/),\nand this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html)."
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": true,
        "tarballDir": "dist"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "package-lock.json", "pnpm-lock.yaml", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": "ğŸ‰ This ${issue.pull_request ? 'PR is included' : 'issue is fixed'} in version ${nextRelease.version} :tada:",
        "releasedLabels": false,
        "failTitle": "The automated release is failing ğŸš¨",
        "failComment": "The automated release is failing. Please check the logs and fix the issues.",
        "addReleases": "bottom",
        "assets": [
          {
            "path": "dist/**/*",
            "label": "Source code (zip)"
          }
        ]
      }
    ]
  ],
  "preset": "conventionalcommits",
  "presetConfig": {
    "types": [
      {
        "type": "feat",
        "section": "âœ¨ Features"
      },
      {
        "type": "fix",
        "section": "ğŸ› Bug Fixes"
      },
      {
        "type": "chore",
        "section": "ğŸ”§ Maintenance"
      },
      {
        "type": "docs",
        "section": "ğŸ“š Documentation"
      },
      {
        "type": "style",
        "section": "ğŸ¨ Code Style"
      },
      {
        "type": "refactor",
        "section": "â™»ï¸ Code Refactoring"
      },
      {
        "type": "perf",
        "section": "âš¡ Performance Improvements"
      },
      {
        "type": "test",
        "section": "ğŸ§ª Tests"
      },
      {
        "type": "build",
        "section": "ğŸ—ï¸ Build System"
      },
      {
        "type": "ci",
        "section": "ğŸ‘· CI"
      },
      {
        "type": "revert",
        "section": "âª Reverts"
      }
    ]
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ]
  }
}
